@model CinemaTask.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="container mt-4">
    <h2>Edit Movie</h2>
    <hr />

    <form asp-area="Admin" asp-controller="Movie" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DateTime" class="form-label"></label>
            <input asp-for="DateTime" type="datetime-local" class="form-control" />
            <span asp-validation-for="DateTime" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Current Main Image</label><br />
            @if (!string.IsNullOrEmpty(Model.MainImage))
            {
                <img src="~/images/movies/@Model.MainImage" alt="@Model.Name" width="120" class="rounded" />
            }
            else
            {
                <span class="text-muted">No image uploaded</span>
            }
        </div>

        <div class="mb-3">
            <label class="form-label">Change Main Image</label>
            <input type="file" name="MainImageFile" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Change Sub Image</label>
            <input type="file" name="SubImageFile" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label"></label>
            <input asp-for="CategoryId" class="form-control" />
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CinemaId" class="form-label"></label>
            <input asp-for="CinemaId" class="form-control" />
            <span asp-validation-for="CinemaId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ActorId" class="form-label"></label>
            <input asp-for="ActorId" class="form-control" />
            <span asp-validation-for="ActorId" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="Status" class="form-check-input" />
            <label asp-for="Status" class="form-check-label">Active</label>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-area="Admin" asp-controller="Movie" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
